{
  "name": "electron-boilerplate",
  "productName": "Electron Boilerplate",
  "version": "1.0.0",
  "description": "The best electron boilerplate to get you started.",
  "license": "MIT",
  "repository": "sanjaysunil/Electron-Boilerplate",
  "author": {
    "name": "Sanjay Sunil",
    "email": "sanjaysunil@protonmail.com",
    "url": "https://sanjaysunil.me"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --macos --linux --windows",
    "win": "electron-builder --windows"
  },
  "dependencies": {
    "electron-reloader": "^1.2.1"
  },
  "devDependencies": {
    "electron": ">=22.0.3",
    "electron-builder": "^23.6.0",
    "eslint": "^8.25.0",
    "eslint-config-google": "^0.14.0"
  },
  "build": {
    "appId": "com.company.AppName",
    "mac": {
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
